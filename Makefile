SRC = color.c error.c validation.c srcs/ft_split.c  srcs/get_next_line.c srcs/get_next_line_utils.c
INCLUDE		=	so_long.h
OBG			= 	$(SRC:.c=.o)
NAME 		=	so_long
GFLAGS 		= 	-Wall -Wextra -Werror
CC 			=	 gcc
AR 			=	 ar -rc
RM  	    =    rm -rf


%.o : %.c 
	@$(CC) $(GFLAGS) -c $< -o $@ -I $(INCLUDE)  

$(NAME) : $(OBG)
	@$(AR) $(NAME) $(OBG)

all   : $(NAME) 1337_logo

clean : 
	@$(RM) $(OBG)
	@echo "\033[31mDELETE .O FILESðŸ—‘\033[0m"
fclean: clean
	@$(RM) $(NAME)

re    : fclean all

test  : re
	@echo "\033[92m TESTING IN PRORGRESS...âœ…\033[0m"
	@$(CC) $(GFLAGS) so_long.c $(NAME)
	# @./a.out "test.bar" || cat -e

